            <div class="col s2 m1 l1 offset-s1 offset-m1 offset-l2 valign">
              <a href="#!"><i class="small material-icons grey-text dropdown-button" data-activates="sort-button" data-belowOrigin="true" data-constrainWidth="false">keyboard_arrow_down</i></a>
                <ul id='sort-button' class='dropdown-content'>
                  <li><a href="/blog/sort?sortType=recentupdate" class="grey-text"><i class="small material-icons grey-text">keyboard_arrow_down</i> recent updated</a></li>
                  <li><a href="/blog/sort?sortType=oldupdate" class="grey-text"><i class="small material-icons grey-text">keyboard_arrow_down</i> oldest updated</a></li>
                  <li><a href="/blog/sort?sortType=recentposted" class="grey-text sort-type"><i class="small material-icons grey-text">keyboard_arrow_down</i> recent posted</a></li>
                  <li><a href="/blog/sort?sortType=oldposted" class="grey-text"><i class="small material-icons grey-text">keyboard_arrow_up</i> oldest posted</a></li>
                </ul>
            </div>
            <div class="col s2 m1 l1 valign">
              <a href="#!" id="search-trigger"><i class="small material-icons grey-text">search</i></a>
            </div>
            <div class="col s8 m10 l10 valign"></div>

          </div>
          <div id="search-header" class="collapsible-header"></div>
          <div class="container collapsible-body" id="search-box">
            <div class="row">
              <form class="col s12 m6 l4 offset-m3 offset-l4" method="POST" action="/blog/search?_method=POST">
                  <input id="tagSearch" name="tagSearch" type="hidden" value="[]">
                <div class="input-field">
                  <input id="search" name="search" placeholder="Text search" type="search">
                  <label class="label-icon" for="search"><i class="material-icons grey-text">search</i></label>
                  <i class="material-icons">close</i>
                </div>
              </form>
            </div>
            <div class="row" id="tag-auto" data-tags="{{#each tagCount}}{{_id}},{{/each}}">
              <div class="col s12 m6 l4 offset-m3 offset-l4 chips chips-autocomplete"></div>  
            </div>
          </div>
        </li>
      </ul>

      {{#if search}}
      <div class="row">
        <div class="col s10 m10 l8 offset-s1 offset-m1 offset-l2">
        <h6>{{blogPost.length}} Results</h6>
        </div>
      </div>
      {{/if}}
      <div class="container" {{#if commentID}}data-commentid="{{commentID}}" data-blogcommentid="{{blogID}}"{{/if}} id="blog-container">
        <div class="row">
          <ul class="collapsible popout" data-collapsible="expandable">
            {{#each blogPost}}
            <li class="card">
              <div class="collapsible-header {{#activePost @index}}
                active
                {{/activePost}}" id="{{_id}}">
              <h5>{{title}}</h5>
              <div class="badge">{{formatDate createDate "short"}} | Updated {{formatRelative postDate}} <a class="hoverable right" href="/blog/page/{{_id}}">Permalink</a></div>
              </div>
              <div class="collapsible-body">
                <div class="row browser-default markdown-body">
                  {{{body}}}
                </div>
                <div class="row markdown-body">
                Tags: 
                  {{#each tags}}
                  <div class="chip">{{this}}</div>
                  {{/each}}
                </div>
                <div class="row markdown-body">
                  <a class="btn-floating btn-small waves-effect grey lighten-3 waves-white right comment-button" data-id="{{_id}}" id="comment-button-{{_id}}"><i class="material-icons grey-text">comment</i></a>
                </div>
                {{#if comments.length}}
                <div class="card-action comment-panel-{{_id}}" hidden>
                  <ul class="collection">
                  {{#each comments}}
                    <li class="collection-item avatar comment" id="{{_id}}">
                      <i class="material-icons circle">record_voice_over</i>
                      <span class="commenter">{{commenterName}}</span>
                      <span class="right">Commented {{formatRelative postDate}}</span>
                      <br>
                      <br>
                      <p>{{comment}}</p>
                    </li>
                  {{/each}}
                  </ul>
                </div>
                {{/if}}
                <div class="card-action comment-panel-{{_id}}" id="comment-form-{{@index}}" hidden>
                  <form class="comment-form" method="POST" action="blog/comment/post?_method=POST">
                    <input name="comment_id" id="comment-id-{{@index}}" type="hidden" value="{{_id}}">
                    <input name="source" id="comment-source" type="hidden" value="index">
                    <div class="row">
                      <div class="col s12 comment-field">
                        <textarea name="comment_text" id="comment-message-{{@index}}" class="materialize-textarea comment-field comment-input" placeholder="Tell all the truth but tell it slant..." data-id="{{@index}}"></textarea>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col s12 m5 l4 comment-field">
                        <input name="name" id="comment-name-{{@index}}" type="text" class="validate comment-field comment-input" placeholder="Name (Required.)" required="required" data-id="{{@index}}">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col s12 m5 l4 comment-field">
                        <input name="email" id="comment-email-{{@index}}" type="email" class="validate comment-input comment-field" placeholder="Email (Required. Won't be shared.)" required="required" data-id="{{@index}}">
                      </div>
                    </div>
                    <div class="row">
                      <button id="post-comment-{{@index}}" class="btn-flat waves-effect waves-grey white black-text right disabled post-comment" type="submit" name="action">POST</button>
                    </div>
                  </form>
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>

    </div>
